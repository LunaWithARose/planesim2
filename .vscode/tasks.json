{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-opengl-cube",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-g",
                "-Iinclude",
                "src/graphics.cpp",
                "src/physicsengine.cpp",
                "src/main.cpp",
                "external/glad/src/glad.c",
                "-o",
                "output/OpenGLCube.exe",
                "-I", "C:/msys64/ucrt64/include",
                "-L", "C:/msys64/ucrt64/lib",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}

